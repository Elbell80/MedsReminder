<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFEBEE"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bullet"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtmeds"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textAllCaps="true"
            android:layout_marginBottom="3dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#000000"

            />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/medosage"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_below="@+id/linearlayout1"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="3dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/meddesc"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_below="@+id/medosage"
        android:layout_marginBottom="1dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/updatebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/update"
            android:layout_gravity="end"

            />

        <ImageButton
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delete"
            android:layout_gravity="bottom"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/meddesc">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timepickerhr"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="cursive"



            />

        <View
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timepickermins"

            android:layout_marginBottom="1dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="cursive"
            />


    </LinearLayout>



</RelativeLayout>

